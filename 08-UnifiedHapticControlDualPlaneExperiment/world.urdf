<?xml version="1.0" ?>

<!-- <world name="demo_world" gravity="0.0 0.0 -9.81"> -->
<world name="demo_world" gravity="0.0 0.0 0.0">

	<robot name="panda">
		<!-- model node is required -->
		<model dir="../resources/08-UnifiedHapticControlDualPlaneExperiment" path="panda_arm_sim.urdf" name="panda" />
		<!-- origin node is optional -->
		<origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
	</robot>

	<static_object name="Floor">
		<origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
		<collision>
	        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
	        <geometry>
	            <box size="3.0 3.0 0.1" />
	        </geometry>
	    </collision>
	    <visual>
	        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
	        <geometry>
	            <box size="3.0 3.0 0.1" />
	        </geometry>
	        <material name="material_gray">
		        <color rgba="0.5 0.3 0.3 1.0" />
	        </material>
	    </visual>
	</static_object>

	<static_object name="Plane">
		<origin xyz="0.6 0.0 0.5" rpy="0.0 0.0 0.0" />
		<collision>
	        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
	        <geometry>
	            <box size="0.5 1.4 0.04" />
	        </geometry>
	    </collision>
	    <visual>
	        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
	        <geometry>
	            <box size="0.5 1.4 0.04" />
	        </geometry>
	        <material name="material_orange">
		        <color rgba="1.00 0.60 0.20 1.0" />
	        </material>
	    </visual>
	</static_object>
 
	<static_object name="Box">
		<origin xyz="0.6 0.1 0.51" rpy="0.0 0.0 0.0" />
		<collision>
	        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
	        <geometry>
	            <box size="0.4 0.3 0.06" />
	        </geometry>
	    </collision>
	    <visual>
	        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
	        <geometry>
	            <box size="0.4 0.3 0.06" />
	        </geometry>
	        <material name="material_blue">
		        <color rgba="0.20 0.47 1.00 1.0" />
	        </material>
	    </visual>
	</static_object>

	<light name="light1" type="directional">
		<position xyz="-2.0 -2.0 2.0" />
		<lookat xyz="0.0 0.0 0.0" />
	</light>

	<light name="light2" type="directional">
		<position xyz="2.0 2.0 2.0" />
		<lookat xyz="0.0 0.0 0.0" />
	</light>

<!-- 	<light name="light3" type="directional">
		<position xyz="-2.0 2.0 -2.0" />
		<lookat xyz="0.0 0.0 0.0" />
	</light>

	<light name="light4" type="directional">
		<position xyz="-2.0 -2.0 -2.0" />
		<lookat xyz="0.0 0.0 0.0" />
	</light> -->

	<camera name="camera">
		<position xyz="2.0 0.25  1.0" />
		<lookat xyz="1.0 0.2 0.7" />
		<vertical xyz="0.0 0.0 1.0" />
	</camera>

	<!-- TODO: support stereo specification -->

</world>
