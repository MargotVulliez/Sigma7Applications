<world name="demo_world" gravity="0.0 0.0 0.0">

	<robot name="panda">
		<!-- model node is required -->
		<model dir="../resources/07-UnifiedHapticControlSurfaceAlignment" path="panda_arm.urdf" name="panda" />
		<!-- origin node is optional -->
		<origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
	</robot>

	<static_object name="Floor">
		<origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
		<collision>
	        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
	        <geometry>
	            <box size="3.0 3.0 0.1" />
	        </geometry>
	    </collision>
	    <visual>
	        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
	        <geometry>
	            <box size="3.0 3.0 0.1" />
	        </geometry>
	        <material name="material_gray">
		        <color rgba="0.5 0.3 0.3 1.0" />
	        </material>
	    </visual>
	</static_object>

