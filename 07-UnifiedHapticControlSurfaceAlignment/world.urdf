	<static_object name="Sphere">
		<origin xyz="0.24 0.43 0.35" rpy="0.0 0.0 0.0" />
		<collision>
	        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
	        <geometry>
	            <sphere radius="0.2" />
	        </geometry>
	    </collision>
	    <visual>
	        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
	        <geometry>
	            <sphere radius="0.2" />
	        </geometry>
	        <material name="material_red">
		        <color rgba="1 0.1 0.1 1.0" />
	        </material>
	    </visual>
