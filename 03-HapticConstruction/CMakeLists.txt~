# create an executable
set (CMAKE_RUNTIME_OUTPUT_DIRECTORY ${SIGMA7_APPLICATIONS_BINARY_DIR}/02-HapticDeviceDriver)
ADD_EXECUTABLE (controller03 controller.cpp ${SIGMA7_APPLICATIONS_COMMON_SOURCE})
ADD_EXECUTABLE (simviz03 simviz.cpp ${SIGMA7_APPLICATIONS_COMMON_SOURCE})

# and link the library against the executable
TARGET_LINK_LIBRARIES (controller03 ${SIGMA7_APPLICATIONS_COMMON_LIBRARIES})
TARGET_LINK_LIBRARIES (simviz03 ${SIGMA7_APPLICATIONS_COMMON_LIBRARIES})

# export resources such as model files.
# NOTE: this requires an install build
SET(RESOURCE_DIR ${SIGMA7_APPLICATIONS_BINARY_DIR}/resources)
FILE(MAKE_DIRECTORY ${RESOURCE_DIR})
SET(APP_RESOURCE_DIR ${RESOURCE_DIR}/03-HapticConstruction)
FILE(MAKE_DIRECTORY ${APP_RESOURCE_DIR})
FILE(COPY world.urdf DESTINATION ${APP_RESOURCE_DIR})
FILE(COPY kuka_iiwa.urdf DESTINATION ${APP_RESOURCE_DIR})
# FILE(COPY kuka_iiwa_dremel.urdf DESTINATION ${APP_RESOURCE_DIR})
